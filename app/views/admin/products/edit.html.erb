<div class="jumbotron">
  <h1>Edit Products</h1>
</div>
  <div class="container">
    <%= simple_form_for [:admin, @product ], class: "form-horizontal" do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>

      <%= f.association :categories, collection: Category.all, as: :check_boxes, include_hidden: false%>

      <%= f.button :submit %>
    <% end %>
    <%= link_to "Back to product List", admin_products_path %>
  </div>
